// using Max Heap

#include <bits/stdc++.h> 
int kthLargest(vector<int>& arr, int size, int K) {
	priority_queue<int> pq;
	for(auto it : arr) pq.push(it);
	int n = K-1;
	while(n--) {
		pq.pop();
	}
	return pq.top();
}

// Using Min Heap

#include <bits/stdc++.h> 
int kthLargest(vector<int>& arr, int size, int K) {
	priority_queue<int, vector<int>, greater<int>> pq;
	for(auto it : arr) pq.push(it);
	int n = size - K;
	while(n--) {
		pq.pop();
	}
	return pq.top();
}

